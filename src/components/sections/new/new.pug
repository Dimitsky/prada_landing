section(class="new")
    div(class="container new__container")
        div(class="layout new__layout")
            h2(class="title new__title") NEW ARRIVALS
            ul(class="list-reset new__list list-new")
                each item in newList
                    li(class="list-new__item")
                        div(class="card list-new__body body-list-new")
                            div(class="card__img-wrap body-list-new__img-wrap")
                                picture
                                    source(
                                        type="image/jpg"
                                        srcset=`assets/img/new/${item.imgName}@2x.webp 2x, assets/img/new/${item.imgName}@1x.webp 1x`
                                    )
                                    source(
                                        type="image/webp"
                                        srcset=`assets/img/new/${item.imgName}@2x.jpg 2x, assets/img/new/${item.imgName}@1x.jpg 1x`
                                    )
                                    img(class="card__img body-list-new__img" src=`assets/img/new/${item.imgName}@1x.jpg` alt=item.imgAlt style="max-width: 100%;")
                            span(class="card__colors body-list-new__colors")= item.colors
                            a(class="link card__link body-list-new__link" href=item.aHref)= item.aInnerHTML