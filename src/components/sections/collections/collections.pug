section(class="collections")
    div(class="container collections__container")
        div(class="layout collections__layout")
            div(class="collections__group")
                h3(class="title collections__title") LIGHT LAYERS
                p(class="text collections__text") The Pre-Fall 2021 womenswear collections lightweight jackets in relaxed fits.
                a(class="btn collections__link" href="#") SHOP NOW 
            div(class="collections__img-wrap")
                picture
                    source(
                        type="image/jpg"
                        srcset="assets/img/new/r@2x.webp 2x, assets/img/new/r@1x.webp 1x"
                    )
                    source(
                        type="image/webp"
                        srcset="assets/img/new/r@2x.jpg 2x, assets/img/new/r@1x.jpg 1x"
                    )
                    img(class="collections__img" src="assets/img/new/r@1x.jpg" alt="woman with bag" style="max-width: 100%;")