section(class="hero")
    div(class="container hero__container")
        div(class="layout hero__layout")
            h1(class="title hero__title") PRADA
            nav(class="hero__nav nav-hero")
                ul(class="list-reset nav-hero__list")
                    each item in navList
                        li(class="nav-hero__item")
                            a(class="nav-hero__link" href=item.href)= item.innerHTML
            picture
                source(
                    type="image/webp"
                    srcset="assets/img/hero/i1@2x.webp 2x, assets/img/hero/i1@1x.webp 1x"
                )
                source(
                    type="image/jpg"
                    srcset="assets/img/hero/i1@2x.jpg 2x, assets/img/hero/i1@1x.jpg 1x"
                )
                img(class="img hero__img" src="assets/img/hero/i1@1x.jpg 1x" alt="woman with boho accsessorises posing in pool" style="max-width: 100%;")